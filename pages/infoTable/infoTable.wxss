.container {
  margin: 0;
  padding: 0;
}

.gray-view {
  background: #f4f4f4;
  height: 30rpx;
  width: 100%;
}

.header {
  width: 100%;
  height: 160rpx;
  background: #e9f4fc;
  display: flex;
  flex-flow: column;
}

.header-title {
  font-family: sans-serif;
  font-weight: bold;
  color: #48494a;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.header-subtitle {
  font-family: sans-serif;
  font-size: 32rpx;
  color: #c4c4c4;
  margin-top: 15rpx;
  margin-left: 40rpx;
}

.first-column {
  width: 100%;
  display: flex;
  flex-flow: row;
  height: 80rpx;
  align-items: center;
  font-family: sans-serif;
  font-size: 32rpx;
  color: #c4c4c4;
  background: #fff;
}

.first-column-left {
  margin-left: 40rpx;
  flex: 1;
}

.first-column-right {
  flex: 1;
}

.first-text {
  margin-left: 15rpx;
}

.second-column-width {
  width: 100%;
}

.second-bg {
  background: #fff;
}

.second-column-title {
  padding-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
  color: #66acff;
  font-weight: bold;
}
.red-title{
  color: red;
}

.second-img-container {
  position: relative;
  top: 10rpx;
  float: right;
  margin-right: 30rpx;
}

.second-img {
  width: 160rpx;
  height: 220rpx;
}

.second-cell {
  padding-left: 30rpx;
  padding-right: 30rpx;
  line-height: 80rpx;
  display: flex;
  flex-flow: row;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}

.second-cell-label {
  flex: 1;
  font-size: 32rpx;
  color: #adadad;
}

.seprator {
  width: 20rpx;
}

.second-cell-text {
  flex: -0.3;
  font-size: 32rpx;
}

.third-column {
  background: #fff;
  margin-top: 40rpx;
}

.third-long-text {
  width: 195rpx;
  font-size: 32rpx;
  height: auto;
  color: #adadad;
}

.fourth-column {
  /* margin-top: 40rpx; */
  width: 100%;
  background: #e9f4fc;
  /* width: 90%; */
}

.footer-bg {
  width: 100%;
  background: #f4f4f4;
  margin-top: 60rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}

.btns {
  margin-top: 80rpx;
  height: 90rpx;
  line-height: 90rpx;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  border-radius: 12rpx;
  text-align: center;
  background: #2a8cff;
}

.btn-text {
  color: #fff;
  font-size: 35rpx;
  font-family: sans-serif;
  letter-spacing: 2rpx;
}

.footer {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}

.footer-text {
  font-family: sans-serif;
  font-size: 24rpx;
  color: #c4c4c4;
}

